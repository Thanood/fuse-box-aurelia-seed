{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "strictNullChecks": true,
        "noEmitHelpers": true,
        "noLib": false,
        "lib": [
            "es2015", "es2015.promise", 
            "dom"
        ],
        "outDir": "dist/"
    }
}
